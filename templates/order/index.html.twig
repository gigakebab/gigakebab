{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}

    <h1>Details de la commande :</h1>

    <h3>Prix : {{ order.price }}</h3>

    <ul>
        {% for productLine in productLines %}
            <li>{{ productLine.product.name }} x {{ productLine.quantity }} : {{ productLine.price }}€</li>
        {% endfor %}
    </ul>

    <a href="{{ path("app_home") }}">Retour à l'accueil</a>
    <a href="{{ path("order_validate") }}">Valider</a>
{% endblock %}
